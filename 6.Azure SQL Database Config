--  1.	Query Store On/Off
ALTER DATABASE 데이터베이스명 SET QUERY_STORE = OFF;

ALTER DATABASE 데이터베이스명 SET QUERY_STORE = ON
(OPERATION_MODE = READ_WRITE
    , CLEANUP_POLICY = ( STALE_QUERY_THRESHOLD_DAYS = 30 )
    , DATA_FLUSH_INTERVAL_SECONDS = 900
    , MAX_STORAGE_SIZE_MB = 100
    , INTERVAL_LENGTH_MINUTES = 60
    );

SELECT * FROM sys.database_query_store_options;

-- 2.	MAXDOP
ALTER DATABASE SCOPED CONFIGURATION SET MAXDOP = 1;

SELECT * FROM sys.database_scoped_configurations;
	
-- 3.	비동기 통계 업데이트 ON
ALTER DATABASE 데이터베이스명 SET AUTO_UPDATE_STATISTICS_ASYNC ON;


-- 4.	TDE OFF
ALTER DATABASE 데이터베이스명 SET ENCRYPTION OFF;



